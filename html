  /* =========================
     Utilities & DOM helpers
     ========================= */
  const $ = sel => document.querySelector(sel);
  const $$ = sel => Array.from(document.querySelectorAll(sel));
  document.getElementById('year').textContent = new Date().getFullYear();

  /* =========================
     Cursor
     ========================= */
  (function cursorInit(){
    const c = $('#cursor'), r = $('#cursor-ring');
    let mouse = {x:window.innerWidth/2,y:window.innerHeight/2};
    window.addEventListener('mousemove', e => {
      mouse.x = e.clientX; mouse.y = e.clientY;
      c.style.left = mouse.x+'px'; c.style.top = mouse.y+'px';
      r.style.left = mouse.x+'px'; r.style.top = mouse.y+'px';
    });
    // expand on link hover
    const hoverTargets = ['a','button','.hub-item','.card'];
    hoverTargets.forEach(sel=>{
      document.addEventListener('mouseover', e=>{
        if (e.target.closest(sel)){
          r.style.opacity = 1; r.style.transform='translate(-50%,-50%) scale(1.05)';
        }
      });
      document.addEventListener('mouseout', e=>{
        if (e.target.closest(sel) === null){
          r.style.opacity = 0;
        }
      });
    });
  })();

  /* =========================
     Progress bar
     ========================= */
  (function progressBar(){
    const pb = $('#progressBar');
    window.addEventListener('scroll', () => {
      const h = document.documentElement.scrollHeight - window.innerHeight;
      const pct = (window.scrollY / h) * 100;
      pb.style.width = Math.min(100, Math.max(0, pct)) + '%';
    });
  })();

  /* =========================
     Hash routing (basic)
     ========================= */
  function navigateToHash(hash){
    if(!hash) hash = '#home';
    const target = document.querySelector(hash);
    if(target){
      target.scrollIntoView({behavior:'smooth'});
    } else {
      // fallback home
      document.querySelector('#home').scrollIntoView({behavior:'smooth'});
    }
  }
  window.addEventListener('hashchange', ()=>navigateToHash(location.hash));
  // attach hub dock clicks
  $$('.hub-item').forEach(item=>{
    item.addEventListener('click', ()=> {
      const t = item.dataset.target || '#home';
      location.hash = t;
    });
    item.addEventListener('keypress', (e)=>{ if(e.key === 'Enter') item.click(); });
  });

  /* =========================
     Hero video fallback
     ========================= */
  (function heroVideo(){
    const v = $('#bgVideo'), fallback = $('#bgFallback');
    // Try to load first available assets.video entry
    let loaded=false;
    for(const srcObj of assets.videos){
      // If hosted local assets exist in production, use them
      // For now we set poster and leave <source> fallback as placeholder
      if(srcObj.poster) v.setAttribute('poster', srcObj.poster);
      // NOTE: if you place real files at assets/video/* they will be used
    }
    v.addEventListener('error', ()=>{ v.style.display='none'; fallback.style.display='block'; fallback.style.background='linear-gradient(135deg,var(--grad-a),var(--grad-b),var(--grad-c))';});
  })();

  /* =========================
     Populate Releases carousel
     ========================= */
  function buildReleases(){
    const root = $('#releasesSlides');
    releases.forEach(rel=>{
      const slide = document.createElement('div');
      slide.className='swiper-slide';
      slide.innerHTML = `
        <div class="release-card">
          <div class="release-media"><img src="${rel.cover}" alt="${rel.title}" style="width:100%;height:100%;object-fit:cover"/></div>
          <div class="release-body">
            <div style="display:flex;justify-content:space-between;align-items:center">
              <div>
                <div style="font-weight:800;font-size:1.02rem">${rel.title}</div>
                <div style="color:var(--muted);font-size:.9rem">${rel.artist} • ${rel.type} • ${new Date(rel.date).toLocaleDateString()}</div>
              </div>
              <div style="display:flex;gap:8px">
                <a href="${rel.links.spotify}" aria-label="Spotify" style="padding:.4rem .6rem;border-radius:8px;background:rgba(0,0,0,0.06);font-size:.85rem">SP</a>
                <a href="${rel.links.youtube}" aria-label="YouTube" style="padding:.4rem .6rem;border-radius:8px;background:rgba(0,0,0,0.06);font-size:.85rem">YT</a>
              </div>
            </div>
          </div>
        </div>
      `;
      root.appendChild(slide);
    });
    // init Swiper
    new Swiper('.mySwiper', {
      slidesPerView: 1.05,
      spaceBetween: 18,
      centeredSlides: true,
      loop: true,
      autoplay: { delay:3000, disableOnInteraction: false },
      pagination: { el: '.swiper-pagination', clickable:true },
      navigation: { nextEl: '.swiper-button-next', prevEl: '.swiper-button-prev' },
      breakpoints:{800:{slidesPerView:1.6},1200:{slidesPerView:2.2}}
    });
  }

  /* =========================
     Build timeline
     ========================= */
  function buildTimeline(){
    const root = $('#timelineRoot');
    timeline.forEach((t,i)=>{
      const side = (i%2===0) ? 't-left' : 't-right';
      const wrapper = document.createElement('div');
      wrapper.className = `t-item ${side}`;
      wrapper.innerHTML = `
        <div class="t-dot" aria-hidden="true"></div>
        <div class="t-card">
          <div class="t-date">${new Date(t.dateISO).toLocaleDateString()}</div>
          <div class="t-title" style="font-weight:800;margin-top:6px">${t.title}</div>
          <div style="margin-top:8px;color:var(--muted)">${t.summary}</div>
        </div>
      `;
      root.appendChild(wrapper);
    });
  }

  /* =========================
     Build artists grid + modal
     ========================= */
  function buildArtists(){
    const root = $('#artistsGrid');
    artists.forEach(a=>{
      const card = document.createElement('article');
      card.className='card';
      card.innerHTML = `
        <div class="card-media"><img data-src="${a.cover}" alt="${a.name}" class="lazy" /></div>
        <div class="card-body">
          <div style="display:flex;justify-content:space-between;align-items:center">
            <div>
              <div style="font-weight:800">${a.name}</div>
              <div class="role" style="color:var(--muted)">${a.role}</div>
            </div>
            <div style="text-align:right">${a.tags.map(t=>`<span class="tag">${t}</span>`).join('')}</div>
          </div>
        </div>
      `;
      card.addEventListener('click', ()=>openArtistModal(a));
      root.appendChild(card);
    });
    // lazy load images
    const lazyImgs = document.querySelectorAll('img.lazy');
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(en=>{
        if(en.isIntersecting){
          const img = en.target;
          img.src = img.dataset.src;
          img.classList.remove('lazy');
          io.unobserve(img);
        }
      });
    }, {rootMargin:'120px'});
    lazyImgs.forEach(i=>io.observe(i));
  }

  function openArtistModal(a){
    const modal = $('#artistModal');
    const inner = $('#artistInner');
    inner.innerHTML = `
      <div style="display:flex;gap:18px;align-items:flex-start;flex-direction:column">
        <div style="width:100%;height:340px;background:#000;border-radius:12px;overflow:hidden"><img src="${a.cover}" alt="${a.name}" style="width:100%;height:100%;object-fit:cover"></div>
        <h2 style="margin:8px 0">${a.name} • ${a.role}</h2>
        <p style="color:rgba(0,0,0,0.64);max-width:900px">${a.bio}</p>
        <div style="display:flex;gap:10px;flex-wrap:wrap;margin-top:12px">
          <button class="btn">Play Tracks</button>
          <button class="btn">Gallery</button>
          <a class="btn" href="#">Press Kit</a>
        </div>
      </div>
    `;
    modal.classList.add('show');
    modal.classList.remove('sr-only');
    modal.style.display='grid';
    modal.setAttribute('aria-hidden','false');
    // close
    $('#closeArtistModal').onclick = ()=>{ modal.classList.remove('show'); modal.style.display='none'; modal.setAttribute('aria-hidden','true'); };
  }

  /* =========================
     Video grid & lightbox
     ========================= */
  function buildVideoGrid(){
    const root = $('#videoGrid');
    videos.forEach(v=>{
      const el = document.createElement('div');
      el.className='video-thumb';
      el.innerHTML = `
        <video muted playsinline loop preload="metadata" poster="${v.poster}" data-src="${v.src}"></video>
      `;
      el.addEventListener('mouseenter', ()=>{
        const vid = el.querySelector('video');
        if(!vid.src) vid.src = vid.dataset.src;
        vid.play();
      });
      el.addEventListener('mouseleave', ()=>{
        const vid = el.querySelector('video');
        vid.pause();
        vid.currentTime = 0;
      });
      el.addEventListener('click', ()=>{
        openLightbox(v.src);
      });
      root.appendChild(el);
    });
  }

  function openLightbox(src){
    const lb = $('#lightbox');
    const v = $('#lightboxVideo');
    v.src = src;
    lb.classList.add('show');
    lb.setAttribute('aria-hidden','false');
    v.play();
    $('#closeLightbox').onclick = ()=>{ v.pause(); v.src=''; lb.classList.remove('show'); lb.setAttribute('aria-hidden','true'); };
  }

  /* =========================
     News & Events
     ========================= */
  function buildNews(){
    const root = $('#newsList');
    news.forEach(n=>{
      const el = document.createElement('article');
      el.style.background='#fff';el.style.color='#000';el.style.padding='14px';el.style.borderRadius='12px';el.style.border='1px solid #f1f1f4';
      el.innerHTML = `<div style="font-size:.8rem;color:var(--muted)">${n.date}</div><h4 style="margin:6px 0">${n.title}</h4><p style="color:#333">${n.summary}</p>`;
      root.appendChild(el);
    });
  }

  /* =========================
     Team build
     ========================= */
  function buildTeam(){
    const root = $('#teamGrid');
    team.forEach(m=>{
      const el = document.createElement('div');
      el.className='member';
      el.innerHTML = `<div class="avatar" aria-hidden="true" style="background-image:url(${m.img});background-size:cover"></div><div><div style="font-weight:700">${m.name}</div><div style="color:var(--muted)">${m.title}</div><div style="margin-top:6px;color:var(--muted)">${m.area}</div></div>`;
      root.appendChild(el);
    });
  }

  /* =========================
     Event handlers
     ========================= */
  // Audition open
  $('#openAudition').addEventListener('click', ()=>window.open(AUDITION_FORM_URL,'_blank'));
  $('#applyNow').addEventListener('click', ()=>window.open(AUDITION_FORM_URL,'_blank'));
  $('#heroApply').addEventListener('click', ()=>window.open(AUDITION_FORM_URL,'_blank'));

  // Watch showreel modal: open first video
  $('#watchShowreel').addEventListener('click', ()=>openLightbox(videos[0].src));

  // Hub items keyboard focus handled earlier

  /* =========================
     GSAP reveals (basic)
     ========================= */
  gsap.registerPlugin(ScrollTrigger);
  gsap.utils.toArray('.glass-card, .card, .member, .release-card, .video-thumb').forEach(el=>{
    gsap.from(el,{opacity:0,y:18,duration:0.9,ease:'power3.out',scrollTrigger:{trigger:el, start:'top 88%'}});
  });

  /* =========================
     Init all
     ========================= */
  (function init(){
    buildReleases();
    buildTimeline();
    buildArtists();
    buildVideoGrid();
    buildNews();
    buildTeam();

    // Pause autoplay on hover for the hero video to avoid audio surprise (it's muted anyway)
    const heroVideo = document.getElementById('bgVideo');
    // Animate partner logos (duplicated in markup)
    // Basic keyboard accessibility for modals
    document.addEventListener('keydown', e=>{ if(e.key==='Escape'){ const lb = $('#lightbox'); lb.classList.remove('show'); const v = $('#lightboxVideo'); if(v) {v.pause();v.src=''} }});

    // Swiper nav buttons style fix (aria)
    $$('.swiper-button-prev, .swiper-button-next').forEach(btn=>btn.setAttribute('role','button'));

    // Simple offline fallback: if navigator.offline, show message (very small)
    window.addEventListener('offline', ()=>{ console.warn('You are offline. Some media might not work.'); });

    // Small performance: lazy-load background images for releases (already done via img tags)
  })();

  /* =========================
     Mobile menu (simple)
     ========================= */
  $('#mobileToggle').addEventListener('click', ()=>{
    const links = document.querySelector('.nav-links');
    const shown = links.style.display === 'flex';
    links.style.display = shown ? 'none' : 'flex';
  });

  /* =========================
     Simple 404 hash fallback
     ========================= */
  window.addEventListener('load', ()=>{
    if(location.hash) navigateToHash(location.hash);
    else navigateToHash('#home');
  });

  // Optional: cache data in localStorage for perf
  try{
    localStorage.setItem('nexlabels_cache_v1', JSON.stringify({artists,releases,timeline,videos,team,news}));
  }catch(e){/* ignore */}
  </script>

